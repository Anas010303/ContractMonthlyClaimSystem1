@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container">
    <h1 class="mb-4">HR Dashboard</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Process Claims</h5>
                    <p class="card-text">Finalize claim payments and ensure settlement.</p>
                    <a href="/HR/ProcessClaim" class="btn btn-primary">Process Claims</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Track Claims</h5>
                    <p class="card-text">Track the progress of processed claims.</p>
                    <a href="/HR/TrackClaim" class="btn btn-secondary">Track Claims</a>
                </div>
            </div>
        </div>
    </div>
</div>
