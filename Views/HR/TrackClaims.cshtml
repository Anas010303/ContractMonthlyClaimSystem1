@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

<h2>Track Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Submitted On</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@(claim.HoursWorked * claim.HourlyRate)</td>
                <td>@claim.SubmissionDate.ToString("yyyy-MM-dd")</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>
