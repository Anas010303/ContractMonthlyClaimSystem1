@model Claim
<form asp-action="SubmitClaim" method="post">
    <div>
        <label>Hours Worked:</label>
        <input type="number" asp-for="HoursWorked" id="hours" required />
    </div>
    <div>
        <label>Hourly Rate:</label>
        <input type="number" asp-for="HourlyRate" id="rate" required />
    </div>
    <div>
        <label>Total Payment:</label>
        <input type="text" id="total" readonly />
    </div>
    <button type="submit">Submit</button>
</form>

<script>
    $(document).ready(function () {
        $('#hours, #rate').on('input', function () {
            const hours = parseFloat($('#hours').val()) || 0;
            const rate = parseFloat($('#rate').val()) || 0;
            $('#total').val(hours * rate);
        });
    });
</script>
