@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Track Claim";
}

<h2>Your Claims</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Status</th>
            <th>Submitted On</th>
            <th>Document</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Status</td>
                <td>@claim.SubmittedOn.ToShortDateString()</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.DocumentPath))
                    {
                        <a href="~/documents/@claim.DocumentPath" target="_blank">View Document</a>
                    }
                    else
                    {
                        <span>No Document</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
