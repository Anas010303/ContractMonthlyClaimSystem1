<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS (CDN) -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column h-100" style="font-family: 'Roboto', sans-serif; background-color: #f8f9fa;">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 border-bottom">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Lecturer/Index">Lecturer</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Coordinator/Index">Programme Coordinator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Manager/Index">Academic Manager</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/HR/Index">HR</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-shrink-0">
        <div class="container my-5">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-white text-center border-top">
        <div class="container">
            <span class="text-muted">© 2024 Contract Monthly Claim System - All Rights Reserved</span>
        </div>
    </footer>

    <!-- Bootstrap JS and Popper.js (CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
